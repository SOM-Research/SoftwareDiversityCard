    ageRange: (23,46)
    locations: ['USA']
    workplaceType: hybrid
    ethnicities: ['Asian', 'White']
    genders: ['male', 'female']
    disabilities: ['blind']
    sexualOrientations: ['Straight']
    religiousBeliefs: ['Christianism', 'Muslim']
